{
  "name": "tecs-desktop",
  "version": "1.0.0",
  "description": "TECS Desktop - Advanced AI Expression Management Platform",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "AI",
    "enterprise",
    "management",
    "compliance",
    "innovation",
    "thermodynamic",
    "cognition"
  ],
  "author": "TECS Development Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.6.0"
  },
  "dependencies": {
    "numpy": "^1.21.0",
    "scipy": "^1.7.0",
    "torch": "^1.9.0",
    "cryptography": "^3.4.0",
    "psutil": "^5.8.0"
  },
  "build": {
    "appId": "com.tecs.desktop",
    "productName": "TECS Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": "nsis"
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}